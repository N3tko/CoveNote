{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^db:generate", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "public/**"],
      "env": [
        "AUTH_SECRET",
        "BASE_URL",
        "VITE_API_URL",
        "DATABASE_URL",
        "CACHE_URL",
        "ENCRYPTION_KEY",
        "OPENROUTER_API_KEY",
        "EXA_API_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "prod:release": {
      "cache": false
    },
    "//#fmt-lint": {},
    "//#fmt-lint:fix": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    }
  }
}
