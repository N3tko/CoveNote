async function seed() {
  console.log('Seeding database...')

  await db.insert(messageTable).values([
    { username: 'system', message: 'Welcome to the chat!' },
    { username: 'system', message: 'This is a sample message.' },
  ])

  console.log('Database seeded!')
  process.exit(0)
}

seed().catch((e) => {
