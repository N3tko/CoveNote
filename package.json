{
  "name": "@netko",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "fmt-lint": "biome check .",
    "fmt-lint:fix": "biome check . --write",
    "check-types": "turbo run check-types",
    "netko": "bun run packages/shared/cli/src/index.ts",
    "claw": "bun run packages/shared/cli/src/index.ts dev --app claw",
    "claw:serve": "bun run packages/shared/cli/src/index.ts serve --app claw",
    "claw:build": "bun run packages/shared/cli/src/index.ts build --app claw"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@netko/cli": "workspace:*",
    "turbo": "^2.5.8",
    "typescript": "5.9.2",
    "@types/bun": "^1.3.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.23",
  "workspaces": [
    "apps/*",
    "packages/shared/*",
    "packages/clients/*",
    "packages/claw/*",
    "packages/configs/*"
  ]
}
