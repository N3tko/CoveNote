{
  "name": "server",
  "type": "module",
  "private": true,
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "dev": "repo dev --app server",
    "serve": "NODE_ENV=development bun run --hot src/index.ts",
    "start": "NODE_ENV=production bun run src/index.ts",
    "build": "NODE_ENV=production bun build src/index.ts --outdir dist --target bun",
    "docker:up": "repo docker:up --app server",
    "docker:down": "repo docker:down --app server",
    "db:migrate": "repo db:migrate --app server",
    "db:generate": "repo db:generate --app server",
    "db:push": "repo db:push --app server",
    "db:seed": "repo db:seed --app server"
  },
  "dependencies": {
    "@netko/server-config": "workspace:*",
    "@netko/server-domain": "workspace:*",
    "@netko/server-repository": "workspace:*",
    "@netko/server-service": "workspace:*",
    "@netko/logger": "workspace:*",
    "@netko/elysia-logger": "workspace:*",
    "@netko/cli": "workspace:*",
    "@netko/typescript-config": "workspace:*",
    "elysia": "^1.2.25",
    "@elysiajs/cors": "^1.2.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "typescript": "^5.7.0"
  }
}
